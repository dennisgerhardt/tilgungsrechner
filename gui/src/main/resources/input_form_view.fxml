<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>

<GridPane alignment="CENTER" hgap="7.0" vgap="7.0"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/2.2"
          fx:controller="com.mycompany.tilgungsrechner.controller.InputFormController">

    <children>
        <Label text="%label.loanAmount" labelFor="$loanAmountField" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="loanAmountField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="%label.payoutDate" labelFor="$payoutDateField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="payoutDateField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="%label.durationOfDebit" labelFor="$durationOfDebitField" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="durationOfDebitField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="%label.fixedDebitRate" labelFor="$fixedDebitRateField" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="fixedDebitRateField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="%label.desiredRate" labelFor="$desiredRateField" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="desiredRateField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Button text="%button.calculate" onAction="#startCalculationExecuted" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </children>

</GridPane>